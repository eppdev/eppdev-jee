<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.eppdev.test.dao.TestEntityDao">

    <sql id="columns">
        a.id as "id",
        a.name as "name",
        a.create_time as "createTime",
        a.update_time as "createTime",
        a.del_flag as "delFlag"
    </sql>

    <sql id="customColumns">
    </sql>

    <sql id="customJoins">
    </sql>

    <insert id="insert" parameterType="cn.eppdev.test.entity.TestEntity">
        insert into test_entity(
            id,
            name,
            create_time,
            update_time,
            del_flag
        )
        values(
            #{id},
            #{name},
            #{createTime},
            #{createTime},
            #{delFlag}
        )
    </insert>

    <delete id="delete">
        update test_entity set del_flag=1 where id=#{id}
    </delete>

    <update id="update" parameterType="cn.eppdev.test.entity.TestEntity">
        update test_entity
        <set>
            <if test="name !=null and name != ''">
                name=#{name},
            </if>
            <if test="delFlag !=null and delFlag != ''">
                del_flag=#{delFlag},
            </if>
        </set>
        where id = #{id}
    </update>

    <select id="get" resultType="cn.eppdev.test.entity.TestEntity">
        select
        <include refid="columns"/>
        <include refid="customColumns"/>
        from test_entity a
        <include refid="customJoins"/>
        where a.id = #{id}
    </select>

    <select id="listAll" resultType="cn.eppdev.test.entity.TestEntity">
        select
        <include refid="columns"/>
        <include refid="customColumns"/>
        from test_entity a
        <include refid="customJoins"/>
        <where>
            and del_flag != 1
        </where>
        <choose>
            <when test="orderBy != null and orderBy != ''">
                order by ${orderBy}
            </when>
        </choose>
    </select>


    <select id="listBy" resultType="cn.eppdev.test.entity.TestEntity">
        select
        <include refid="columns"/>
        <include refid="customColumns"/>
        from test_entity a
        <include refid="customJoins"/>
        <where>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            and del_flag != 1
        </where>
        <choose>
            <when test="orderBy != null and orderBy != ''">
                order by ${orderBy}
            </when>
        </choose>
    </select>

    <select id="listLike" resultType="cn.eppdev.test.entity.TestEntity">
        <bind name="_bind_name" value="'%' + name + '%'"></bind>
        select
        <include refid="columns"/>
        <include refid="customColumns"/>
        from test_entity a
        <include refid="customJoins"/>
        <where>
            and del_flag != 1
            <if test="name !=null and name != ''">
                and name like #{_bind_name}
            </if>
        </where>
        <choose>
            <when test="orderBy != null and orderBy != ''">
                order by ${orderBy}
            </when>
        </choose>
    </select>

    <select id="listLeftLike" resultType="cn.eppdev.test.entity.TestEntity">
        <bind name="_bind_name" value="name + '%'"></bind>
        select
        <include refid="columns"/>
        <include refid="customColumns"/>
        from test_entity a
        <include refid="customJoins"/>
        <where>
            and del_flag != 1
            <if test="name !=null and name != ''">
                and name like #{_bind_name}
            </if>
        </where>
        <choose>
            <when test="orderBy != null and orderBy != ''">
                order by ${orderBy}
            </when>
        </choose>
    </select>


    <select id="listRawLike" resultType="cn.eppdev.test.entity.TestEntity">
        select
        <include refid="columns"/>
        <include refid="customColumns"/>
        from test_entity a
        <include refid="customJoins"/>
        <where>
            and del_flag != 1
            <if test="name !=null and name != ''">
                and name like #{name}
            </if>
        </where>
        <choose>
            <when test="orderBy != null and orderBy != ''">
                order by ${orderBy}
            </when>
        </choose>
    </select>

    <select id="countAll">
        select
            count(1)
        from test_entity a
        <include refid="customJoins"/>
        <where>
            and del_flag != 1
        </where>
    </select>


    <select id="countBy">
        select
        count(1)
        from test_entity a
        <include refid="customJoins"/>
        <where>
            and del_flag != 1
        </where>
    </select>


    <select id="countLike">
        select
        count(1)
        from test_entity a
        <where>
            and del_flag != 1
        </where>
    </select>

</mapper>